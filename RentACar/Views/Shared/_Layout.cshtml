<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - RentaCar</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>
    <link href='https://fonts.googleapis.com/css?family=Oxygen:400,300,700&subset=latin,latin-ext' rel='stylesheet' type='text/css'>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <meta name="description" content="The description of my page" />
</head>
<body id="page-top" class="index">
    <!-- Navbar -->
    <nav id="mainNav" class="navbar navbar-default navbar-fixed-top navbar-custom">
        <div class="container">
            <div class="navbar-header page-scroll">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">

                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="navbar-brand">
                    <a href='@Url.Action("Index", "Home")'>
                        <img class="navbar-logo" src="~/Images/Logos/in-logo.png" />
                    </a>
                </div>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-pages">
                    <li class="navbar-brand">@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                    <li class="navbar-brand">@Html.ActionLink("About", "About", "Home", new { area = "" }, null)</li>
                    <li class="navbar-brand">@Html.ActionLink("Cars", "CarList", "Home", new { area = "" }, null)</li>
                    <li class="navbar-brand">@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, null)</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
        </nav>

        <!-- Content -->
        @RenderBody()

        <div class="container">
            <div class="row">
                <div class="col-xs-5">
                    <hr />
                </div>
                <div class="col-xs-2 text-center">
                    <img class="footer-image" src="~/Images/Logos/in-logo.png" />
                </div>
                <div class="row">
                    <div class="col-xs-5">
                        <hr />
                    </div>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <footer id="page-top" class="text-center" padding="5%">
            <div class="container">
                <div class="row">
                    <div class="col-md-offset-4 col-xs-3 col-md-1 text-center">
                        <a href='@Url.Action("Index", "Home")'>Home</a>
                    </div>
                    <div class="col-xs-3 col-sm- col-md-1 text-center">
                        <a href='@Url.Action("About", "Home")'>About</a>
                    </div>
                    <div class="col-xs-3 col-md-1 text-center">
                        <a href='@Url.Action("Contact", "Home")'>Contact</a>
                    </div>
                    <div class="col-xs-3 col-md-1 text-center">
                        <p>Partners</p>
                    </div>
                </div>
            </div>
            <hr />
            <div class="pan">
                <div class="container">
                    <div class="row">
                        <div class="footer-col col-md-4">
                            <h3>

                                Location
                            </h3>
                            <p>El Salvador</p>
                            <p>San Salvador, CA 90210</p>
                        </div>
                        <div class="footer-col col-md-4">
                            <h3>Around the Web</h3>
                            <ul class="list-inline">
                                <li>
                                    <a href="#" class="btn btn-social-icon btn-instagram"><span class="fa fa-instagram"></span></a>
                                </li>
                                <li>
                                    <a href="#" class="btn btn-social-icon btn-google"><span class="fa fa-google"></span></a>
                                </li>
                                <li>
                                    <a href="#" class="btn btn-social-icon btn-twitter"><span class="fa fa-twitter"></span></a>
                                </li>
                                <li>
                                    <a href="https://www.facebook.com/profile.php?id=1094506319" target="_blank" class="btn btn-social-icon btn-facebook"><span class="fa  fa-facebook"></span></a>
                                </li>
                                <li>
                                    <a href="#" class="btn btn-social-icon  btn-linkedin "> <span class="fa  fa-linkedin"></span></a>
                                </li>
                            </ul>
                        </div>
                        <div class="footer-col col-md-4">
                            <h3>Acerca de Rent A Car</h3>
                            <p>Somos una empresa comprometita y seria con nuestros clientes .</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            Copyright &copy; @DateTime.Now.Year - Demo-Aplicación ASP.NET - MVC
                            - Mauricio Garcia<br />
                            Todos los Derechos Reservados
                        </div>
                    </div>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
