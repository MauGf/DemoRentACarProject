@model IEnumerable<RentACar.Models.Bill>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="page-body">
        <div class="col-md-3">
            @{ Html.RenderPartial("_Menu"); }
        </div>
        <div class="col-md-9">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <span>Bills</span>
                </div>
                <div class="panel-body">
                    @if (Model.Count() > 0)
                    {
                        <table class="table table-striped text-center">
                            <tr>
                                <th class="text-center">
                                    @Html.ActionLink("Rent ID", "Index", new { sortOrder = ViewBag.SortById })
                                </th>
                                <th class="text-center">
                                    @Html.DisplayNameFor(model => model.Rent.Car.Model)
                                </th>
                                <th class="text-center">
                                    @Html.ActionLink("Date", "Index", new { sortOrder = ViewBag.SortByDate })
                                </th>
                                <th class="text-center">
                                    @Html.DisplayNameFor(model => model.Cost)
                                </th>
                                <th class="text-center">
                                    @Html.DisplayNameFor(model => model.Rent.Paid)
                                </th>
                                <th class="text-center">
                                    Actions
                                </th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr class="text-center">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Rent.RentId)
                                    </td>
                                    <td class="text-center">
                                        @Html.DisplayFor(modelItem => item.Rent.Car.Brand.Name)
                                        @Html.DisplayFor(modelItem => item.Rent.Car.Model)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Date)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Cost) $
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Rent.Paid)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Details", "Details", new { id = item.RentId })
                                    </td>
                                </tr>
                            }
                        </table>
                    }
                    else
                    {
                        <p class="text-center">
                            No bills yet.
                        </p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
