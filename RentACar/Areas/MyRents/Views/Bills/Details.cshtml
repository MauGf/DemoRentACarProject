@model RentACar.Models.Bill

@{
    ViewBag.Title = "Details";
}

<div class="container">
    <div class="page-body">
        <div class="col-md-3">
            @{ Html.RenderPartial("_Menu"); }
        </div>
        <div class="col-md-9">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <span>Rent details</span>
                    <span class="pull-right">
                        @Html.ActionLink("Back to List", "Index")
                    </span>
                </div>
                <div class="panel-body">
                    <div>
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.Rent.RentId)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Rent.RentId)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Rent.Car.Model)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Rent.Car.Brand.Name)
                                @Html.DisplayFor(model => model.Rent.Car.Model)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Date)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Date)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Cost)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Cost) $
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Rent.Paid)
                            </dt>

                            <dd>
                                @Html.CheckBoxFor(model => model.Rent.Paid)
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
