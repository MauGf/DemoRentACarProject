@model RentACar.Areas.ControlPanel.Models.UserDetailsViewModel

@{
    ViewBag.Title = "Edit";
}

<div class="container">
    <div class="page-body">
        <div class="col-md-3">
            @{ Html.RenderPartial("_Menu"); }
        </div>
        <div class="col-md-9">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <span>Change account info</span>
                    <span class="pull-right">
                        @Html.ActionLink("Back to List", "Index")
                    </span>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(m => m.UserId)

                            <div class="col-xs-12">
                                <h4>Account details</h4>
                                <div class="row">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.UserId, new { @class = "col-xs-12 col-sm-2 col-md-2 control-label" })
                                        <div class="col-xs-12 col-sm-4 col-md-4">
                                            @Html.TextBoxFor(m => m.UserId, new { @class = "form-control", @readonly = "readonly" })
                                            @Html.ValidationMessageFor(m => m.UserId, "", new { @class = "text-danger"})
                                        </div>
                                        @Html.LabelFor(m => m.Role, new { @class = "col-xs-12 col-sm-2 col-md-2 control-label" })
                                        <div class="col-xs-12 col-sm-4 col-md-4">
                                            @Html.DropDownList("Role", ViewBag.Roles as SelectList, null , new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Role, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.UserName, new { @class = "col-xs-12 col-sm-2 col-md-2 control-label" })
                                        <div class="col-xs-12 col-sm-4 col-md-4">
                                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                                        </div>
                                        @Html.LabelFor(m => m.Password, new { @class = "col-xs-12 col-sm-2 col-md-2 control-label" })
                                        <div class="col-xs-12 col-sm-4 col-md-4">
                                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.EmailAddress, new { @class = "col-xs-12 col-sm-2 col-md-2 control-label" })
                                        <div class="col-xs-12 col-sm-4 col-md-4">
                                            @Html.TextBoxFor(m => m.EmailAddress, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.EmailAddress, "", new { @class = "text-danger" })
                                        </div>
                                        @Html.LabelFor(m => m.EmailAddressConfirmed, new { @class = "col-xs-12 col-sm-2 col-md-2 control-label" })
                                        <div class="col-xs-12 col-sm-4 col-md-4">
                                            @Html.CheckBoxFor(m => m.EmailAddressConfirmed)
                                            @Html.ValidationMessageFor(m => m.EmailAddressConfirmed, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                                <hr />
                                <h4>User details</h4>
                                <div class="row">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.FirstName, new { @class = "col-xs-12 col-sm-2 col-md-2 control-label" })
                                        <div class="col-xs-12 col-sm-4 col-md-4">
                                            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
                                        </div>
                                        @Html.LabelFor(m => m.LastName, new { @class = "col-xs-12 col-sm-2 col-md-2 control-label" })
                                        <div class="col-xs-12 col-sm-4 col-md-4">
                                            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Age, new { @class = "col-xs-12 col-sm-2 col-md-2 control-label" })
                                        <div class="col-xs-12 col-sm-4 col-md-4">
                                            @Html.TextBoxFor(m => m.Age, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Age, "", new { @class = "text-danger" })
                                        </div>
                                        @Html.LabelFor(m => m.Country, new { @class = "col-xs-12 col-sm-2 col-md-2 control-label" })
                                        <div class="col-xs-12 col-sm-4 col-md-4">
                                            @Html.TextBoxFor(m => m.Country, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Country, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Address, new { @class = "col-xs-12 col-sm-2 col-md-2 control-label" })
                                        <div class="col-xs-12 col-sm-4 col-md-4">
                                            @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
                                        </div>
                                        @Html.LabelFor(m => m.City, new { @class = "col-xs-12 col-sm-2 col-md-2 control-label" })
                                        <div class="col-xs-12 col-sm-4 col-md-4">
                                            @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.City, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <hr />
                                <h4>Account stats</h4>
                                <div class="row">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.AccessFailedCount, new { @class = "col-xs-12 col-sm-2 col-md-2 control-label" })
                                        <div class="col-xs-12 col-sm-4 col-md-4">
                                            <p class="form-control-static">
                                                @Html.DisplayFor(m => m.AccessFailedCount)
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.LockoutEnabled, new { @class = "col-xs-12 col-sm-2 col-md-2 control-label" })
                                        <div class="col-xs-12 col-sm-4 col-md-4">
                                            @Html.CheckBoxFor(m => m.LockoutEnabled)
                                            @Html.ValidationMessageFor(m => m.LockoutEnabled, "", new { @class = "text-danger" })
                                        </div>
                                        @Html.LabelFor(m => m.LockoutEndDate, new { @class = "col-xs-12 col-sm-2 col-md-2 control-label" })
                                        <div class="col-xs-12 col-sm-4 col-md-4">
                                            @Html.TextBoxFor(m => m.LockoutEndDate, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.LockoutEndDate, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Save changes" class="btn btn-success" />
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
}