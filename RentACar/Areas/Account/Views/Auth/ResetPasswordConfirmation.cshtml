@{
    ViewBag.Title = "Reset password confirmation";
}

<div class="container">
    <div class="page-body">
        <hgroup class="title">
            <h1>@ViewBag.Title.</h1>
        </hgroup>
        <div>
            <p>
                Your password has been reset. Please @Html.ActionLink("click here to log in", "Login", "Auth", routeValues: new { area = "Account" }, htmlAttributes: new { id = "loginLink" })
            </p>
        </div>
    </div>
</div>
