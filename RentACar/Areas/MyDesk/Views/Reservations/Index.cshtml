@model IEnumerable<RentACar.Models.Reservation>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="page-body">
        <div class="col-md-3">
            @{ Html.RenderPartial("_Menu"); }
        </div>
        <div class="col-md-9">
            @if (ViewBag.StatusMessage.Length > 0)
            {
                <div class="alert @ViewBag.StatusClass">
                    @ViewBag.StatusMessage
                </div>
            }

            <div class="panel panel-default">
                <div class="panel-heading">
                    <span>Reservations</span>
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-hover">
                        <tr>
                            <th class="text-center">
                                @Html.ActionLink("Reservation ID", "Index", new { sortOrder = ViewBag.SortById })
                            </th>
                            <th class="text-center">
                                User
                            </th>
                            <th class="text-center">
                                @Html.DisplayNameFor(model => model.Car.Model)
                            </th>
                            <th class="text-center">
                                @Html.ActionLink("Date", "Index", new { sortOrder = ViewBag.SortByDate })
                            </th>
                            <th class="text-center">
                                Actions
                            </th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr class="text-center">
                                <td>
                                    @Html.DisplayFor(modelItem => item.ReservationId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.User.UserDetails.FirstName)
                                    @Html.DisplayFor(modelItem => item.User.UserDetails.LastName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Car.Brand.Name)
                                    @Html.DisplayFor(modelItem => item.Car.Model)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Date)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.ReservationId }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.ReservationId }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.ReservationId }) | 
                                    @Html.ActionLink("Rent", "RentIt", new { id = item.ReservationId })
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
